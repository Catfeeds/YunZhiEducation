<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zxm.palmcampus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="26" />

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zxm.palmcampus.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zxm.palmcampus.activity.GuideActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.zxm.palmcampus.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.zxm.palmcampus.base.impl.setting.SettingCodeActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.zxm.palmcampus.base.impl.setting.SettingNotify"
            android:label="@string/app_name" />
        <activity
            android:name="com.zxm.palmcampus.base.impl.setting.SettingVersionActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.zxm.palmcampus.base.impl.setting.SettingHomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.zxm.palmcampus.base.impl.setting.SettingLoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.zxm.palmcampus.base.impl.setting.SettingRegisterActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.zxm.palmcampus.base.home.syllabus.Syllabus"
            android:label="@string/app_name" />
        <activity
            android:name="com.zxm.palmcampus.base.home.syllabus.activity.CourseInfoActivity"
            android:label="@string/app_name" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>